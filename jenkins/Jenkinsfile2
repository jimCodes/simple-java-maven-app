pipeline {
    //def buildHotClass = load('./jenkins/buildHotClass.groovy')
    agent any
    stages {
        stage('build') {
            steps {
                sh 'mvn clean install -T 1C -Dmaven.compile.fork=true -Dmaven.test.skip=true'
            }
        }
        stage('clear old class'){
            steps{
                echo 'clear old class'
                script{

                }
            }
        }

        stage('zip class'){
            steps{
                echo 'echo zip class'
                script{
                    def module_name = manager.build.buildVariables.get("SERVER_NAME")
                    manager.addShortText("module_name: " + module_name)
                    println("-module_name: " + module_name)
                    def tag = manager.build.buildVariables.get("CLASS_NAME_LIST")
                    manager.addShortText("CLASS_NAME_LIST: " + tag)
                    println("-CLASS_NAME_LIST: " + tag)

                }
            }
        }
    }
}

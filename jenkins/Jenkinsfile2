pipeline {
    //def buildHotClass = load('./jenkins/buildHotClass.groovy')
    agent any
    stages {
        stage('build') {
            steps {
                sh 'mvn clean install -T 1C -Dmaven.compile.fork=true -Dmaven.test.skip=true'
            }
        }
        stage('copy class'){
            steps{
                echo 'echo copy class'
                script{
                    buildHotClass.cpClassFromJar();
                }
            }
        }

        stage('zip class'){
            steps{
                echo 'echo zip class'
                script{
                    buildHotClass.buildClsasZip();
                }
            }
        }
    }
}
